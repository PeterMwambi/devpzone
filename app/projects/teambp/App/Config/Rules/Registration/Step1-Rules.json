{
    "firstname": {
        "required": true,
        "min": 2,
        "max": 25,
        "pattern": "\/^[A-Za-z]*$\/"
    },
    "lastname": {
        "required": true,
        "min": 2,
        "max": 30,
        "pattern": "\/^[A-Za-z]*$\/"
    },
    "gender": {
        "required": true,
        "values": [
            "Male",
            "Female"
        ]
    },
    "age": {
        "required": true,
        "min": 18,
        "max": 80,
        "constant": "int"
    },
    "nationality": {
        "required": true,
        "values": [
            "Kenyan"
        ]
    },
    "marital-status": {
        "required": true,
        "values": [
            "Single",
            "Married",
            "Divorced",
            "Widowed"
        ]
    },
    "occupation": {
        "required": true,
        "min": 3,
        "max": 20,
        "pattern": "\/^[A-Za-z ]*$\/",
        "values": [
            "Student",
            "Employed",
            "Self-Employed"
        ]
    }
}